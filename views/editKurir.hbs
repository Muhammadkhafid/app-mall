                                    <form action="/kurir/update/{{data.id}}" method="post" novalidate="novalidate">
                                        <div class="form-group">
                                            <label for="cc-payment" class="control-label mb-1">Nama</label>
                                            <input id="cc-pament" name="nama" type="text" value="{{data.nama}}" class="form-control"
                                                aria-required="true" aria-invalid="false"
                                                placeholder="Nama Kurir">
                                        </div>
                                        <div class="form-group has-success">
                                            <label for="cc-name" class="control-label mb-1">Alamat</label>
                                            <input id="cc-name" name="alamat" type="text" value="{{data.alamat}}"
                                                class="form-control cc-name valid" data-val="true"
                                                data-val-required="Mohon isi Alamat Kurir" autocomplete="cc-name"
                                                aria-required="true" aria-invalid="false"
                                                aria-describedby="cc-name-error" placeholder="Alamat Kurir">
                                            <span class="help-block field-validation-valid" data-valmsg-for="cc-name"
                                                data-valmsg-replace="true"></span>
                                        </div>

                                        <div class="row">
                                            <div class="col-6">
                                                <div class="form-group">
                                                    <label for="cc-exp" class="control-label mb-1">Nomor HP</label>
                                                    <input id="cc-exp" name="noHp" type="number"
                                                        class="form-control cc-exp" value="{{data.noHp}}" data-val="true"
                                                        data-val-required="Mohon isi Nomor Handphone Kurir"
                                                        data-val-cc-exp="Mohon isi dengan Angka"
                                                        placeholder="Nomor Handphone Kurir" autocomplete="cc-exp">
                                                    <span class="help-block" data-valmsg-for="cc-exp"
                                                        data-valmsg-replace="true"></span>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <label for="x_card_code" class="control-label mb-1">Area</label>
                                                <div class="input-group">
                                                    <input id="x_card_code" name="area" type="text"
                                                        class="form-control cc-cvc" value="{{data.area}}" data-val="true"
                                                        data-val-required="Mohon isi Area Pengantaran"
                                                        data-val-cc-cvc="Mohon isi dengan Huruf" autocomplete="off"
                                                        placeholder="Area Pengataran">

                                                </div>
                                            </div>
                                        </div>
                                        <div>
                                            <button id="payment-button" type="submit"
                                                class="btn btn-lg btn-info btn-block">
                                                <i class="fa fa-paper-plane fa-lg"></i>&nbsp;
                                                <span>Simpan</span>
                                                {{!-- <span id="payment-button-sending" style="display:none;">Sendingâ€¦</span> --}}
                                            </button>
                                        </div>
                                    </form>                               